<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true,class:"form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Contraseña" %><br/>
    <% if @minimum_password_length %>
      <% caracteres_minimos = @minimum_password_length.to_s + " carácteres mínimos" %>
     <%= f.password_field :password, autocomplete: "off", placeholder: caracteres_minimos, class:"form-control" %>
    <% else %>
      <%= f.password_field :password, autocomplete: "off" %>
    <% end %>
  </div>


  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmación de Contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %><br/>
  </div>

  <div class="form-group">
    <%= f.submit "Registrarse", class: "btn btn-primary" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>


