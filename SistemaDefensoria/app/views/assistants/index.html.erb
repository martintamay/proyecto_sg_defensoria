          <%= link_to (fa_icon 'pencil'), edit_assistant_path(assistant), class: "btn btn-default" %>
          <%= link_to (fa_icon 'trash'), assistant, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class: "btn btn-danger" %>
