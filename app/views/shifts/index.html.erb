

<p id="notice"><%= notice %></p>

<!-- PANEL PRINCIPAL -->
  <div class="box">
            <div class="box-header">
              <h3 class="box-title">TURNOS DE DEFENSORES</h3>
               <div class="box-tools">
                  <ul class=" no-margin pull-right">
                    <%= link_to (fa_icon 'plus', text: 'Crear'), new_shift_path, class: 'btn btn-primary' %>
                  </ul> 
               </div>
            </div>
                         

              <!-- TABLA -->
            <div class="panel-body "  >   
                <table id="table_di" class= "table table-hover   table-bordered table-striped" >
                    <thead>  <!-- TITULOS DE LA TABLE -->
                        <tr>
                          <th>Defensor</th>
                          <th>Fecha</th>
                          <th class="col-md-2"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @shifts.each do |shift| %>
                          <tr>
                            <td><%= shift.user.entity.full_name %></td>
                            <td><%= shift.shift_date %></td>
                            <td align="center" >
                              <div class="btn-group">
                                <%= link_to (fa_icon 'eye' ), shift ,class: "btn btn-default" %>
                                <%= link_to (fa_icon 'pencil'), edit_shift_path(shift),class: "btn btn-default" %>
                                <%= link_to (fa_icon 'trash'), shift, method: :delete, data: { confirm: 'EstÃ¡ seguro?' },class: "btn btn-default"  %>
                              </div>
                            </td>
                          </tr>
                        <% end %>
                    </tbody>
              </table>
</div>
</div>
