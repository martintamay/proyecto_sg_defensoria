<p id="notice"><%= notice %></p>

<h1 align="center">Lista de Defensores</h1>
<!-- para el borde de la tabla -->
<div class="panel panel-default">
<!-- para que seleccione la fila en donde apunta el cursor -->
        <table class="table table-hover" >
         <thead>
           <tr>
             <th>Nombre</th>
             <th>Apellido</th>
             <th>Teléfono</th>
             <th>Email</th>
             <th>Tipo de Defensor</th>
             <th colspan="3"></th>
            </tr>
         </thead>
 
        <tbody  >
   
        <% @lawyers.each do |lawyer| %>
      <tr>
        
        <td><%= lawyer.entity.name%></td>
        <td><%= lawyer.entity.last_name%></td>
        <td><%= lawyer.entity.phone%></td>
        <td><%= lawyer.entity.email%></td>
        <td><%= lawyer.type_lawyer %></td>
        <td><%= link_to (fa_icon 'eye open'), lawyer,class: "btn btn-default" %></td>
        <td><%= link_to (fa_icon 'pencil'), edit_lawyer_path(lawyer),class: "btn btn-default" %></td>
        <td> <%= link_to (fa_icon 'trash'), lawyer, method: :delete, data: { confirm: 'Está seguro?' }, class: "btn btn-danger"%> </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<%= link_to (fa_icon 'plus', text: 'Nuevo Defensor'), new_lawyer_path, class: "btn btn-primary" %>
