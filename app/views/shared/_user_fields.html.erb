<%= f.email_field :email, label: "Correo", autofocus: true,class:"form-control"  %>

<% if @minimum_password_length %>
  <% caracteres_minimos = @minimum_password_length.to_s + " carácteres mínimos" %>
  <%= f.password_field :password, label: "Contraseña", autocomplete: "off", placeholder: caracteres_minimos, class:"form-control" %>
<% else %>
  <%= f.password_field :password, label: "Contraseña", autocomplete: "off" %>
<% end %>

<%= f.password_field :password_confirmation, label: "Confirmar Contraseña", autocomplete: "off", class: "form-control" %>