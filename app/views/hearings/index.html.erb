
<!-- PANEL PRINCIPAL -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Audiencias</h3>
     <div class="box-tools">
        <ul class=" no-margin pull-right">
          <%= link_to (fa_icon 'plus', text: 'Crear'), new_hearing_path,class: 'btn btn-primary' %>
          <%= link_to "Reporte (PDF)",hearings_path(format: 'pdf'), class: "btn btn-info" %>
          </ul>
     </div>
  </div>
   <!-- TABLA -->   
  <div class="panel-body table-responsive "  >    
<table id="table_di" class= "table table-hover  table-striped table-bordered " >
  <thead>
    <tr>
      <th>Fecha de Audiencia</th>
      <th>Defensor</th>
      <th>Caso</th>
      <th class="col-md-2"></th>
    </tr>
  </thead>

  <tbody>
    <% @hearings.each do |hearing| %>
      <tr>
        <td><%= hearing.audiencia %></td>
        <td><%= hearing.user.entity.full_name %></td>
        <td><%= hearing.legal_case.name %></td>
        <td align="center" ><%= link_to (fa_icon 'eye'), hearing, class: 'btn btn-info'  %>
         <%= link_to (fa_icon 'pencil'), edit_hearing_path(hearing), class: 'btn btn-success' %>
         <%= link_to (fa_icon 'trash'), hearing, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
