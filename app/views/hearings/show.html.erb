     </tr> 
   </tbody>
  </table>
         
</div>
    <%= link_to (fa_icon 'pencil', text: 'Editar'), edit_hearing_path(@hearing), class: 'btn btn-default pull-right' %>

     <%= link_to (fa_icon 'file-text-o', text: 'Reporte'), reporte_hearing_path(@hearing), class: 'btn btn-default pull-right' %>
