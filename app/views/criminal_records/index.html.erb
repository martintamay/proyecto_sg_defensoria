<p id="notice"><%= notice %></p>
<h1 align="center">Fichas Penales <%= link_to (fa_icon 'plus', text: ''), new_criminal_record_path,class: 'btn btn-primary' %></h1>
 <hr>      

<table id="table_di" class= "table table-hover  table-striped table-bordered" >
  <thead>
    <tr>
      <th>Etapa Procesal</th>
      <th>Numero de Expediente</th>
      <th>Fecha de Intervención</th>
      <th>Clasificación de Delito</th>
      <th>Lugar de Comisión</th>
      <th>Fecha de Comisión</th>
      <th>Unidad Fiscal</th>
      <th>Medida de Prevención</th>
      <th class="col-md-2"></th>
      
      
    </tr>
  </thead>

  <tbody>
    <% @criminal_records.each do |criminal_record| %>
      <tr>
        <td><%= criminal_record.procedural_stage %></td>
        <td><%= criminal_record.inquire_number %></td>
        <td><%= criminal_record.intervention_date %></td>
        <td><%= criminal_record.type_of_crime %></td>
        <td><%= criminal_record.commission_place %></td>
        <td><%= criminal_record.commission_date %></td>
        <td><%= criminal_record.prosecutor_unit %></td>
        <td><%= criminal_record.precautionary_measures %></td>
        <td align="center" ><%= link_to (fa_icon 'eye'), criminal_record, class: 'btn btn-info'  %>
         <%= link_to (fa_icon 'pencil'), edit_criminal_record_path(criminal_record), class: 'btn btn-success' %>
         <%= link_to (fa_icon 'trash'), criminal_record, method: :delete, data: { confirm: 'Está seguro?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

