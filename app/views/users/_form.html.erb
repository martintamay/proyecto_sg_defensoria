<%= bootstrap_form_for(@user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this entity from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      <div class="panel-group" >
          <div class="panel panel-default" >
            <!-- encabezado -->
              <div class="panel-heading ">
                <b class="panel-title" >USUARIO</b>
                
              </div>
              <!-- formulario -->
              <div class="panel-body "  >
                    <div class="col-md-6">
                          <%= form.fields_for :entity, @user.entity do |ent| %>
                            <%= render "shared/entity_fields", :form => ent %>
                          <% end %>
                    </div>

                    <div class="col-md-6">
                        <%= form.password_field :password, id: :user_password, label: "Contraseña", :autocomplete => :off %>

                        <%= form.password_field :password_confirmation, id: :user_password_confirmation, label: "Confirmar Contraseña", autocomplete: false %>
                        <% if @user!=nil%>
                              <div class="form-group">
                                      <label>Roles: </label>
                                      <label>
                                        <% @user.roles.each do |rol| %>
                                          <%= rol.name %>
                                        <% end %>
                                      </label>
                                      <label>
                                        <% if @user.has_role? :admin %>
                                          <% cambiar_a_rol = "Default"%>
                                        <% else %>
                                          <% cambiar_a_rol = "Admin" %>
                                        <% end %>
                                        <% if @user==nil %>
                                          <%= link_to "Hacer "+cambiar_a_rol, cambiar_rol_user_path, class: 'btn btn-default'%>
                                        <% end %>  
                                      </label>
                              </div>
                        <% end %>
                        <%= form.text_field :type_user, id: :user_type_user, label: "Tipo de Usuario" %>
                    </div>
                  <!-- Boton agregar -->
                    <div class="col-md-12">    
                      <%= button_tag(type: 'submit',class: "btn btn-primary pull-right") do %>
                        <%= fa_icon 'floppy-o' %> Guardar
                      <% end %> 
                      <%= link_to (fa_icon 'arrow-circle-left', text: 'Volver'), users_path, class: 'btn btn-default pull-left' %>
                    </div> 
                    <div></div> 
                </div>

            <% end %>          
          </div> <!-- fin panel default -->
        </div> <!-- fin group -->
    
   
    </div>
