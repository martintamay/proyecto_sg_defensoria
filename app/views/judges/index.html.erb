
<!-- PANEL PRINCIPAL -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Juez</h3>
     <div class="box-tools">
        <ul class=" no-margin pull-right">
          <%= link_to (fa_icon 'plus', text: 'Crear'), new_judge_path, class: 'btn btn-primary' %>
        </ul>
     </div>
  </div>


  <!-- TABLA -->
  <div class="panel-body "  >
    <table id="table_di" class= "table table-hover   table-bordered table-striped" >
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Teléfono</th>
          <th>Correo</th>
          <th>Juzgado</th>
          <th class="col-md-2"></th>
        </tr>
      </thead>

      <tbody>
        <% @judges.each do |judge| %>
          <tr>

            <td><%= judge.entity.full_name %></td>
            <td><%= judge.entity.phone %></td>
            <td><%= judge.entity.email %></td>
            <td><%= judge.court.name %></td>
            <td align="center"><%= link_to (fa_icon 'eye'), judge, class: 'btn btn-info'  %>
             <%= link_to (fa_icon 'pencil'), edit_judge_path(judge), class: 'btn btn-success' %>
             <%= link_to (fa_icon 'trash'), judge, method: :delete, data: { confirm: 'Está seguro?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
