

<p id="notice"><%= notice %></p>

<!-- PANEL PRINCIPAL -->
  <div class="box">
            <div class="box-header">
              <h3 class="box-title">LISTA DE JUECES</h3>
               <div class="box-tools">
                  <ul class=" no-margin pull-right">
                    <%= link_to (fa_icon 'plus', text: 'Crear'), new_judge_path, class: 'btn btn-primary' %>
                  </ul> 
               </div>
            </div>
                         

              <!-- TABLA -->
            <div class="panel-body "  >   
                <table id="table_di" class= "table table-hover   table-bordered table-striped" >
                    <thead>  <!-- TITULOS DE LA TABLE -->
                        <tr>
                          <th>Nombre</th>
                          <th>Tel√©fono</th>
                          <th>Correo</th>
                          <th>Juzgado</th>
                          <th class="col-md-2"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @judges.each do |judge| %>
                          <tr>

                            <td><%= judge.entity.full_name %></td>
                            <td><%= judge.entity.phone %></td>
                            <td><%= judge.entity.email %></td>
                            <td><%= judge.court.name %></td>
                             <td align="center" >
                              <div class="btn-group">
                                <%= link_to (fa_icon 'eye' ), judge ,class: "btn btn-default" %>
                                <%= link_to (fa_icon 'pencil'), edit_judge_path(judge),class: "btn btn-default" %>
                              
                              </div>
                            </td>
                          </tr>
                        <% end %>
                    </tbody>
              </table>
</div>
</div>

                 
