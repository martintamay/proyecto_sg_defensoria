<%= bootstrap_form_for(@visit) do |form| %>

  <% if visit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(visit.errors.count, "error") %> prohibited this visit from being saved:</h2>

      <ul>
      <% visit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Muestra el panel de agregacion -->
      <div class="panel-group" >
          <div class="panel panel-default" >
            <!-- encabezado -->
              <div class="panel-heading ">
                <b class="panel-title">Visita</b>

              </div>
              <!-- formulario -->
              <div class="panel-body " >
                <div>&nbsp;</div>
                <%= form.collection_select :suspect_id, Suspect.all, :id, :name_with_initial, label:"Imputado", required: "true", placeholder: 'Este campo es Obligatorio' %>
<div>&nbsp;</div>
                <%= form.text_field :name_visit, id: :visit_name_visit,label:"Nombre", required: "true", placeholder: 'Este campo es Obligatorio' %>
<div>&nbsp;</div>
              <%= form.date_field :date_visit, id: :visit_date_visit ,label:"Dia De La Visita"%>
              <div>&nbsp;</div>
              <%= form.text_field :observation, id: :visit_observation,label:"Observacion" %>
              <!-- Botones -->
              <div class="col-md-12">
                      <%= button_tag(type: 'submit',class: "btn btn-primary pull-right") do %>
                        <%= fa_icon 'floppy-o' %> Guardar
                      <% end %>
                      <%= link_to (fa_icon 'arrow-circle-left', text: 'Volver'),  visits_path, class: 'btn btn-default pull-left' %>
                    </div>

              <% end %>

            </div>
        </div>
