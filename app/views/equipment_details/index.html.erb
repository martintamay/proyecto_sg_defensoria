  <thead>
    <tr>
      <th>Caso</th>
      <th>Usuario</th>
    </tr>
  </thead>

  <tbody>
    <% @equipment_details.each do |equipment_detail| %>
      <tr>
        <td><%= equipment_detail.legal_case.name %></td>
        <td><%= equipment_detail.user.entity.full_name %></td>
        <td align="center" ><%= link_to (fa_icon 'eye'), equipment_detail, class: 'btn btn-default'  %>
         <%= link_to (fa_icon 'pencil'), edit_equipment_detail_path(equipment_detail), class: 'btn btn-default' %>
         <%= link_to (fa_icon 'trash'), equipment_detail, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

