
<!-- PANEL PRINCIPAL -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">EQUIPO</h3>
     <div class="box-tools">
        <ul class=" no-margin pull-right">
          <%= link_to (fa_icon 'plus', text: 'Crear'), new_equipment_detail_path, class: 'btn btn-primary' %>
        </ul>
     </div>
  </div>


 <hr>
