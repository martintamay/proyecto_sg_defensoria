       <!-- Boton agregar -->
        <div>&nbsp;</div>
        <div class="col-md-12">
          <%= button_tag(type: 'submit',class: "btn btn-primary pull-right") do %>
            <%= fa_icon 'floppy-o' %> Guardar
          <% end %>
          <%= link_to (fa_icon 'arrow-circle-left', text: 'Volver'),  equipment_details_path, class: 'btn btn-default pull-left' %>
        </div>
      </div> <!-- fin panel default -->
    </div> <!-- fin group -->
  </div>
<% end %>
