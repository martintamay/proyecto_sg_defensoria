 <div class="table-responsive">  
<div class="panel panel-info">
  <div class="panel-heading"><h2>Ficha de Caso</h2></div>
  <table class="table">
   <thead>
     <th>Nombre del caso</th>
     <th>Defensor</th>
     <th>Juzgado</th>
     <th>Juez</th>
     <th>Imputado</th>
     <th>Ficha Penal Nro.</th>
     <th>Sentencia</th>
   </thead>
   <tbody>
    <tr>
      <td><%= @legal_case.name %></td>
      <td><%= @legal_case.user.entity.full_name %></td>
      <td><%= @legal_case.court.name %></td>
      <td><%= @legal_case.judge.entity.full_name %></td>
      <td><%= @legal_case.suspect.entity.full_name %></td>
      <td><%= @legal_case.criminal_record.inquire_number %></td>
      <td><%= @legal_case.final_sentence %></td>
    </tr> 
   </tbody>
  </table>
         
</div>
       <%= link_to (fa_icon 'pencil', text: 'Editar'), edit_legal_case_path(@legal_case), class: 'btn btn-default pull-right' %>

        <%= link_to (fa_icon 'file-text-o', text: 'Reporte'), reporte_completo_caso_legal_case_path(@legal_case), class: 'btn btn-default pull-right' %>

     <%= link_to (fa_icon 'arrow-circle-left', text: 'Volver'), legal_cases_path, class: 'btn btn-default pull-left' %>

</div>
