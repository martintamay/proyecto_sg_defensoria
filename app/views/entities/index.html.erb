

<p id="notice"><%= notice %></p>

<!-- PANEL PRINCIPAL -->
  <div class="box">
            <div class="box-header">
              <h3 class="box-title">LISTA DE PERSONAS</h3>
               <div class="box-tools">
                  <ul class=" no-margin pull-right">
                    <%= link_to (fa_icon 'plus', text: 'Crear'), new_entity_path, class: 'btn btn-primary' %>
                  </ul> 
               </div>
            </div>
                         

              <!-- TABLA -->
            <div class="panel-body "  >   
                <table id="table_di" class= "table table-hover   table-bordered table-striped" >
                    <thead>  <!-- TITULOS DE LA TABLE -->
                        
                        <tr>
                          <th>Nombre</th>
                          <th>Apellido</th>
                          <th>Teléfono</th>
                          <th>Cumpleaños</th>
                          <th>Email</th>
                          <th class="col-md-2"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @entities.each do |entity| %>
                          <tr>
                            <td><%= entity.name %></td>
                            <td><%= entity.last_name %></td>
                            <td><%= entity.phone %></td>
                            <td><%= entity.birthdate %></td>
                            <td><%= entity.email %></td>
                             <td align="center" >
                               <div class="btn-group">
                                <%= link_to (fa_icon 'eye' ), entity ,class: "btn btn-default" %>
                                <%= link_to (fa_icon 'pencil'), edit_entity_path(entity),class: "btn btn-default" %>
                                <%= link_to (fa_icon 'trash'), entity, method: :delete, data: { confirm: 'Está seguro?' },class: "btn btn-default"  %>
                              </div>
                            </td>
                          </tr>
                        <% end %>
                    </tbody>
              </table>
</div>
</div>