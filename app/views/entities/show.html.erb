
<div class="col-md-4"></div>
<div class="col-md-5"><!-- Tamaño del formulario --> 
 <!-- Formulario --> 
  <div class="panel panel-info">
    <div class="panel-heading " align="center"><h3>Nueva Enditad</h3> </div>
        <div class="panel-body">
              <ul class="list-group">
                <li class="list-group-item">
                    <strong>Nombre:</strong>
                    <%= @entity.name %>
                  </li>
                  <li class="list-group-item">
                    <strong>Apellido:</strong>
                    <%= @entity.last_name %>
                  </li>
                  <li class="list-group-item">
                    <strong>Teléfono:</strong>
                    <%= @entity.phone %>
                  </li>
                  <li class="list-group-item">
                    <strong>Nacimiento:</strong>
                    <%= @entity.birthdate %>
                  </li>
                  <li class="list-group-item">
                    <strong>Correo:</strong>
                    <%= @entity.email %>
                </li>
              </ul>
              <%= link_to (fa_icon 'pencil', text: 'Editar'), edit_entity_path(@entity), class: 'btn btn-success pull-right' %>
              <%= link_to (fa_icon 'arrow-circle-left', text: 'Volver'), entities_path, class: 'btn btn-default pull-left' %>
            </div>
          </div>
          </div>